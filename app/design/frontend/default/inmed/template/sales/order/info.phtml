<?php /** @var $this Mage_Sales_Block_Order_Info */ ?>
<?php $_order = $this->getOrder() ?>
<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
<div class="box-account box-account-padding box-account-top-margin ">
    <h3 class="float-left"><?php echo $this->__('Order #%s - %s', $_order->getRealOrderId(), $_order->getStatusLabel()) ?></h3>
    <div class="box-content">
		<?php echo $this->getChildHtml('buttons') ?>
	</div>
</div>
<?php echo $this->getStatusHistoryRssUrl($_order) ?>
<div class="box-account">
	<h4 class="sub-float-left">Order Information</h4>
	<div class="box-content">
		<p class="order-date"><?php echo $this->__('Order Date: %s', $this->formatDate($_order->getCreatedAtStoreDate(), 'long')) ?></p>

		<?php if (!$_order->getIsVirtual()): ?>
			<table class="customer-order-information">

				<tr>
					<td class="order-addresses">

						<h4><?php echo $this->__('Shipping Address') ?></h4>
						<address><?php echo $_order->getShippingAddress()->format('html') ?></address>

						<h4><?php echo $this->__('Billing Address') ?></h4>
						<address><?php echo $_order->getBillingAddress()->format('html') ?></address>

					</td>

					<td class="order-shipping-payment">
						<h4><?php echo $this->__('Shipping Method') ?></h4>
						<?php if ($_order->getShippingDescription()): ?>
							<?php echo $this->escapeHtml($_order->getShippingDescription()) ?>
						<?php else: ?>
							<p><?php echo $this->helper('sales')->__('No shipping information available'); ?></p>
						<?php endif; ?>
						<p>&nbsp;</p>

						<h4><?php echo $this->__('Payment Method') ?></h4>
						<?php echo $this->getPaymentInfoHtml() ?>

					</td>
				</tr>

			</table>

		<?php endif; ?>

	</div>
</div>

