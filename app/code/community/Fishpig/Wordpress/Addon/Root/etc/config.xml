<?xml version="1.0"?>
<config>
	<modules>
		<Fishpig_Wordpress_Addon_Root>
			<version>1.0.2.0</version>
		</Fishpig_Wordpress_Addon_Root>
	</modules>
	<global>
		<helpers>
			<wp_addon_root>
				<class>Fishpig_Wordpress_Addon_Root</class>
			</wp_addon_root>
		</helpers>
		<events>
			<controller_front_init_before>
                <observers>
					<wp_addon_root>
						<type>singleton</type>
						<class>Fishpig_Wordpress_Addon_Root_Helper_Data</class>
						<method>controllerFrontInitObserver</method>
					</wp_addon_root>
                </observers>
            </controller_front_init_before>
			<wordpress_get_blog_route>
				<observers>
					<wp_addon_root>
						<type>singleton</type>
						<class>Fishpig_Wordpress_Addon_Root_Helper_Data</class>
						<method>blogRouteGetObserver</method>
					</wp_addon_root>
				</observers>
			</wordpress_get_blog_route>
			<wordpress_get_toplink_url>
				<observers>
					<wp_addon_root>
						<type>singleton</type>
						<class>Fishpig_Wordpress_Addon_Root_Helper_Data</class>
						<method>getToplinkUrlObserver</method>
					</wp_addon_root>
				</observers>
			</wordpress_get_toplink_url>
			<wordpress_get_toplink_label>
				<observers>
					<wp_addon_root>
						<type>singleton</type>
						<class>Fishpig_Wordpress_Addon_Root_Helper_Data</class>
						<method>getToplinkLabelObserver</method>
					</wp_addon_root>
				</observers>
			</wordpress_get_toplink_label>
		</events>
	</global>
	<default>
		<wordpress>
			<integration>
				<at_root>1</at_root>
				<replace_homepage>0</replace_homepage>
			</integration>
		</wordpress>
	</default>
</config>